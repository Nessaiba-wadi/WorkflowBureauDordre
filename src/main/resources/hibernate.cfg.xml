<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost;databaseName=BureauDordreWorkflow;encrypt=false;</property>
        <property name="hibernate.connection.username">monUtilisateur</property>
        <property name="hibernate.connection.password">password123@@</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="org.example.model.BureauOrdre"/>
        <mapping class="org.example.model.Comptabilite"/>
        <mapping class="org.example.model.Document"/>
        <mapping class="org.example.model.Dossier"/>
        <mapping class="org.example.model.Fournisseur"/>
        <mapping class="org.example.model.Role"/>
        <mapping class="org.example.model.Tresorerie"/>
        <mapping class="org.example.model.Utilisateur"/>
    </session-factory>
</hibernate-configuration>